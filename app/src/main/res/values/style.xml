<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ButtonStyle_ping" parent="@style/Widget.AppCompat.Button.Colored" >
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>

        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/btn</item>




    </style>

    <style name="ButtonStyle_purple_light"  parent="ButtonStyle_ping">
        <item name="android:backgroundTint">@color/purple_light</item>
    </style>

    <style name="ButtonStyle_purple_dark" parent="ButtonStyle_ping" >
        <item name="android:backgroundTint">@color/purple_dark</item>
    </style>



    <style name="ColumnStyle">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_8dp</item>

    </style>


</resources>

